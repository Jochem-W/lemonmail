{
  "name": "lemonmail",
  "version": "1.0.0",
  "main": "dist/index.mjs",
  "author": "Jochem-W",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "camelcase-keys": "^9.1.3",
    "discord.js": "^14.14.1",
