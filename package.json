    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "semi": false,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }
}
