generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Source {
  DM
  GUILD
}

model Thread {
  id String @id

  userId       String
  active       Boolean?
  source       Source
  closedReason String?
  lastMessage  String

  @@unique([userId, active])
}

model StaffMember {
  id String @id

  addToThread Boolean
}

model User {
  id String @id

  blocked Boolean
}
